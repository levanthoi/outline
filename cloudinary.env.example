# Cloudinary Configuration Example
# Copy these variables to your .env file and fill in your actual values

# File Storage Configuration
FILE_STORAGE=cloudinary

# Cloudinary Credentials (get these from https://cloudinary.com/console)
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here  
CLOUDINARY_API_SECRET=your_api_secret_here

# Optional: Keep existing AWS S3 configuration for fallback
# FILE_STORAGE=s3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_UPLOAD_BUCKET_NAME=your_bucket_name
# AWS_REGION=us-east-1

# Other common Outline configurations
URL=https://your-outline-domain.com
SECRET_KEY=your_secret_key_here
UTILS_SECRET=your_utils_secret_here

DATABASE_URL=postgres://user:password@host:port/database

# For Heroku deployment, use:
# heroku config:set FILE_STORAGE=cloudinary
# heroku config:set CLOUDINARY_CLOUD_NAME=your_cloud_name
# heroku config:set CLOUDINARY_API_KEY=your_api_key  
# heroku config:set CLOUDINARY_API_SECRET=your_api_secret
